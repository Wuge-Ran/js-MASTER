<template name="indexItem">
  <view class='item'>
    <view class='head'>
      <image src='{{item.avatar}}'></image>
      <text class='title'>{{item.date}}</text>
    </view>
    <view class='content'>
      <text class='title'>{{item.title}}</text>
      <image class='cont_img' src='{{item.imgSrc}}'></image>
      <text class='cont_p'>{{item.content}}</text>
    </view>
    <view class='bottom'>
      <image src='/images/icon/chat.png'></image>
      <text>{{item.collection}}</text>
      <image src='/images/icon/view.png'></image>
      <text>{{item.reading}}</text>
    </view>
  </view>
</template>