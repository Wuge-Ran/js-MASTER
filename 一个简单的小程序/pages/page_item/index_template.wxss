.banner image{
  width: 100%;
  height: 500rpx;
}
.banner{
  height: 500rpx;
}
.head image{
  width: 60rpx;
  height: 60rpx;
}
.content .cont_img{
  width: 100%;
}
.head{
  display: flex;
  font-size:26rpx;
  margin-top:10px; 
  margin-bottom: 10px;
}
.head text{
  margin-left: 10rpx;
}
.content{
  display: flex;
  flex-direction: column;
}
.content .title{
  font-size:34rpx;
  font-weight: 600;
  color:#333;
  margin-bottom: 10px;
  margin-left: 10px;
}
.head .title{
  line-height: 60rpx;
}
.cont_p{
  color:#666;
  font-size:28rpx;
  margin-bottom:20rpx;
  margin-left: 20rpx;
  letter-spacing:2rpx;
  line-height: 40rpx;
}
.item{
  border-bottom: 1px solid #ededed;
}
.bottom{
  margin-bottom: 10px;
}
.bottom image{
  height:16px;
